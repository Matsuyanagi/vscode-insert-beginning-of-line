{
    "name": "vscode-insert-beginning-of-line",
    "displayName": "vscode-insert-beginning-of-line",
    "description": "Insert a word at beginning of the lines.",
    "version": "0.0.1",
    "publisher": "Matsuyanagi",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.insertBeginningOfLine"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.insertBeginningOfLine",
                "title": "Insert a word beginning of line."
            }
        ]
    },
    "configuration": {
        "type": "object",
        "title": "Insert Beginning of Line",
        "properties": {
            "insertBeginningOfLine.defaultHeaderWord": {
                "type": "string",
                "default": "> ",
                "description": "Default header word."
            }
        },
        "default": {
            "defaultSeparator": "> "
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
